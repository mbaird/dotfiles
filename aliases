# Unix
alias l="ls -l"
alias ll="ls -al"
alias lh="ls -Alh"
alias mkdir="mkdir -p"

# Folders
alias dev="cd $DEV"
alias web="cd $DEV/web"

# Rails
alias be="bundle exec"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Show remaining battery time
alias batt="pmset -g batt | egrep "([0-9]+\%).*" -o --colour=auto | cut -f3 -d' '"

# Today
alias t="$EDITOR ~/.today"

# Vim -> Neovim
alias vim="nvim"
