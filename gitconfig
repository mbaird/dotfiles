[user]
  name  = Michael Baird
  email = mbaird@users.noreply.github.com
[push]
  default = current
[alias]
  aa = add --all
  ci = commit -v
  co = checkout
  s = status
  d = diff
  dc = diff --cached
  lg = log --color --pretty=format:'%C(magenta)%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  up = !git fetch origin --update-head-ok && git rebase origin/master
  amend = commit --amend
  rc = rebase --continue
  ra = rebase --abort
  cpc = cherry-pick --continue
  cpa = cherry-pick --abort
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[fetch]
  prune = true
[rebase]
  autosquash = true
  autostash = true
[url "git@github.com:"]
  insteadOf = "https://github.com/"
